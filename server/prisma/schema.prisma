generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:password@localhost:5432/authdb?schema=public" // TODO: get from env
}

model User {
  id            String   @id @default(uuid())
  name          String
  roles         Role[]   @default([USER])
  email         String   @unique
  password      String
  refresh_token String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
